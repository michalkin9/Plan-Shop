<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".ActivitiesMenu">

    <Button
        android:id="@+id/myEvents2"
        android:layout_width="208dp"
        android:layout_height="86dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/comixno2clm_medium_webfont"
        android:text="המתכונים שלי"
        android:textSize="27sp"
        android:onClick="myRecipes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myEvents" />

    <TextView
        android:id="@+id/title"
        android:layout_width="166dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/indigo_daisy"
        android:text="Menu"
        android:textColor="@color/colorAccent"
        android:textSize="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/myEvents"
        android:layout_width="208dp"
        android:layout_height="86dp"
        android:layout_marginTop="108dp"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/comixno2clm_medium_webfont"
        android:text="האירועים שלי"
        android:textSize="27sp"
        android:onClick="myEvent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />
</androidx.constraintlayout.widget.ConstraintLayout>




